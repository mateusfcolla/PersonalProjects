<form action="/addPost" method="POST">
    <div class="form-group">
        <label for="inputTitle1">Title:</label>
        <input type="text" class="form-control" placeholder="Enter title" id="inputTitle1" name="inputTitle1" value=<%= data[id]['title'] %>>
    </div>
    <div class="form-group">
        <label for="inputContent1">Content:</label>
        <input type="text" class="form-control" placeholder="Enter content" id="inputContent1" name="inputContent1" value=<%= data[id]['content'] %>>
    </div>
    <div class="form-group">
        <label for="inputAuthor1">Author:</label>
        <input type="text" class="form-control" placeholder="Enter author" id="inputAuthor1" name="inputAuthor1" value=<%= data[id]['author'] %>>
    </div>
    <button type="submit" class="btn btn-success">Submit</button>
</form>